
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>Merhaba Dünyaaaaaa</div>
    <div>
        @DateTime.Now.ToShortDateString()
    </div>
    <br />
    <div>
        @for (int i = 0; i < 7; i++)
        {
            <span>@i</span>
            <br />
        }
    </div>
    <br />
    <div>
        @{
            var sehirler = new List<string>() { "Adana", "Ankara", "Sakarya" };
            int counter = 1;
        }

        @foreach (var sehir in sehirler)
        {
            <span>@counter -</span>
            <span>@sehir</span>
            <br />
            counter += 1;
        }
    </div>
</body>
</html>
